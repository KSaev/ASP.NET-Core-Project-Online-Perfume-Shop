@model ListPerfumeViewModel
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
            <a class="page-link" asp-action="Descending" asp-route-id="@Model.PreviousPage">Previous</a>
        </li>
        @for (int i = Model.Page - 2; i < Model.Page; i++)
        {
            if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Descending" asp-route-id="@i">@i</a>
                </li>
            }

        }
        <li class="page-item">
            <a class="page-link" href="#">@Model.Page</a>
        </li>
        @for (int i = Model.Page + 1; i <= Model.Page + 2; i++)
        {
            if (i <= Model.PageCount)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Descending" asp-route-id="@i">@i</a>
                </li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
            <a class="page-link" asp-action="Descending" asp-route-id="@Model.NextPage">Next</a>
        </li>
    </ul>

    <br />
    <br />
